<%= render 'searchnavbar' %>

<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class ="filtre" >
        <div class="col-xs-12 col-sm-6">
          <%= simple_form_for( " ", :url => '/', :method => :get, :remote => true) do |f| %>
            <%= f.input :select_prix, collection: Article.prix, inline_label: "Trier la liste par prix", selected: @filtre_prix %>
            <%= f.submit "tri", :style => "display: none" %>
          <% end %>
        </div>
        <div class="col-xs-12 col-sm-6">
          <%= simple_form_for( " ", :url => '/', :method => :get, :remote => true) do |f| %>
            <%= f.input :enseigne, collection: @providers, label: "Filtre par enseigne", selected: @provider %>
            <%= f.submit "filtre", :style => "display: none" %>
           <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <% @articles.each do |article| %>
        <div class="col-xs-12 col-sm-6 col-md-3">
          <div class="card" style="background-image: url(<%= article.images.first.url %>);">
              <!-- <img class="card-user" src=article.provider.logo> -->
              <%= image_tag(article.provider.logo, class: "card-user") %>
              <a class="card-link" href="#" ></a>
            <%= link_to "", search_article_path(article.search, article), class: "card-link" %>
          </div>
          <div class="description">
            <p class="title"><%= article.title %></p>
            <p class="prix"><%= article.price.to_f / 100 %> €</p>
            <p><%= article.provider.stores.count %> magasin(s) près de chez vous</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div id="map" data-markers="<%= @markers.to_json %>"></div>
</div>
<%= render 'pages/footer' %>
