<title>QuickFind Article</title>
<%= render 'searchnavbar' %>

<div class="wrapper">
  <div class="container">
    <div id="backlist">
      <a href="javascript:history.back()"><p class="glyphicon glyphicon-arrow-left" aria-hidden="true"><span class="button-back"> Back to list</span></p></a>
    </div>
    <div class="row">
    </div>
    <div class="row showrow">
      <div class="col-xs-12 col-md-6">
        <%= image_tag @article.images.first.url, class: "img-responsive", width: "500" %>
      </div>
      <div class="col-xs-12 col-md-6 card-details">
        <div class="article-description">
          <h2><%= @article.title %></h2>
          <p><%= @article.description %></p>
          <div class="price">
            <p><%= number_to_currency((@article.price.to_f / 100), locale: :fr, precision: 2, strip_insignificant_zeros: true) %> </p>
          </div>
          <div id="buy">
<!--           <a href=<%= @article.url %> title="" target="_blank" class: "btn btn-primary" width: 100 %></a> -->
            <a class="btn btn-success" href="<%= @article.url %>" target="_blank" role="button">VENDOR SITE</a>
          </div>
          <div class="form-group select-size">
            <label for="selsize">Available sizes : </label>
            <select class="selectpicker" id="selsize" data-width="auto">
              <%=  @article.stocks.each do |stock| %>
                <% if stock.available == true %>
                  <option value=stock.size><%= stock.size %></option>
                <% else %>
                  <option value=stock.size disabled><%= stock.size %></option>
                <% end %>
              <% end %>
            </select>
          </div>
          <div id="vendor">
            <p><%= image_tag @article.provider.logo, class: "img-responsive center-block", width: "150" %></p>
          </div>
        </div>
      </div>
     </div>
   </div>
   <div class="container">
     <div class="row">
      <div class="col-xs-12 col-md-6">
        <div class="mapshow" id="map" data-markers="<%= @markers.to_json %>" data-stores="<%= @markers_stores.to_json %>" data-distances="<%= @distances.to_json %>" data-start="<%= @start.to_json %>"></div>
      </div>
      <div class="col-xs-12 col-md-6 card-details">
        <div id="travel-mode">
          <strong>Travel Mode: </strong>
          <select id="mode-travel">
            <option value="driving">Driving</option>
            <option value="walking">Walking</option>
            <option value="bicycling">Bicycling</option>
            <option value="transit">Transit</option>
          </select>
        </div>
        <div class="select-store">
          <h3><i class="fas fa-stopwatch"></i><h3>
          <h3><span id="time-travel">my time travel</span></h3>

          <h3><i class="fas fa-shipping-fast"></i></h3>
          <h3><span id="store-distance"></span></h3>
        </div>
        <div>
          <span><i class="fas fa-clock"></i></span>
          <span id="open-hours-today"></span>
        </div>
        <div >
          <a id="navigation" class="btn btn-primary" href="#" role="button">Go to store !</a>
        </div>
        <div class="informations">
         <div class="separator">
           <h3 id="store-address"><%= @markers_stores.first.address %></h3>
           <p><i class="fas fa-phone">&nbsp;</i><span id="store-phone"></span></p>
         </div>
         <div class="open-hours">
           <p>Open Hours :</p>
           <div id="line"></div>
           <div class="separator">
             <p id="store-schedules"></p>
           </div>
           <div id="line"></div>
         </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'pages/footer' %>
