
<div class="wrapper navbar-search">
  <div class="container">
    <div class="row center-block">
      <div class="col-xs-12 col-sm-3">
        <div class="navbar-search-left center-img">
          <%= link_to root_path do %>
          <%= image_tag "http://res.cloudinary.com/dwoel6eny/image/upload/v1528979620/finaly_2.png", height:114, width: 150  %>
        <% end %>
        </div>
      </div>
      <div class="col-xs-12 col-sm-9 inline">
        <%= simple_form_for "", url: searches_path, html: {class: "form-inline", novalidate: false} do |f| %>
            <div class="form-group">
            <%= f.input :keywords, :label =>"", :placeholder =>"Which cloth?", required: true, input_html: {value: @search.keywords } %>
          </div>
            <div class="form-group">
            <div id="autocomplete">
            <%= f.input :input_address, :label =>"", :placeholder =>"Where ?", required: true, input_html: {value: @search.input_address } %>
            </div>
          </div>
          <div class="form-group">
            <%= f.input :distance, collection: Search.distances, :label =>"", label_method: :label, value_method: :value, selected: @search.distance %>
          </div>
          <div class="form-group center">
            <button class="icon"><i class=" btn fa fa-search"> Search</i></button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
