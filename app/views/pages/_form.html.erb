<%= simple_form_for "", url: searches_path, html: {novalidate: false} do |f| %>
  <%= f.input :keywords, :label =>"", :placeholder =>"Which cloth?", required: true %>
  <div id="autocomplete">
  <%= f.input :input_address, :label =>"", :placeholder =>"Where ?", required: true %>
  <%= f.hidden_field :city, id: 'locality' %>
  </div>
  <%= f.input :distance, :label =>"", collection: Search.distances, label_method: :label, value_method: :value, default: Search.distances.first %>
  <%= submit_tag(value = "QUICKFIND", class: "btn-medium") %>
<% end %>
